import random
import avatar

# Random Bow
bow_num = random.randint(1,3)
# Regular Bow
if bow_num == 1:
    avatar.draw_bow()
    
avatar.draw_eyes("medium")

# Random Nose 
num = random.randint(1,2)
if num == 1:
    avatar.draw_nose("button")
else:
    avatar.draw_nose("triangle")

# Random Mouth
num = random.randint(1,4)
if num == 1:
    avatar.draw_mouth("teeth")
elif num <= 3:
    avatar.draw_mouth("smile")
else:
    avatar.draw_mouth("neutral")

# No bow
if bow_num == 2:
    avatar.draw_bow()
# Bowtie
elif bow_num == 2:
    pass
    
